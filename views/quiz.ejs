<%- include("partials/header") %>

<main class="container py-4">

    <h1 class="text-center m-2"><%= quiz.title %></h1>
    <h3 class="text-center m-2"><%= quiz.description %></h3>
  
    <h4 class="small text-end"><%= quiz.author.fullname %></h4>
  
    <h3>Th√®mes</h3>
    <ul class="mb-4 p-0">
      <!-- on boucle sur la liste des tags du quiz -->
      <% for (let tag of quiz.tags) { %>
        <li class="badge bg-primary"><%= tag.name %></li>
      <% } %>
    </ul>
  
    <h3>Questions</h3>
  
      <% for (let question of quiz.questions) { %>

        <span class="badge bg-info"><%= question.level.name %></span>
        <p class="fw-bold mb-1"><%= question.description %></p>
        <div class="mb-3 ms-2">
          <% for (let proposition of question.propositions) { %>
            <div>
              <input type="radio" id="<%= proposition.description %>" name="<%= question.id %>" value="<%= proposition.description %>">
              <label for="<%= proposition.description %>"><%= proposition.description%></label>
            </div>
          <% } %>
        </div>
        <p class="fst-italic text-secondary"><%= question.anecdote %></p>
  
      <% } %>
    
    <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>
  </main>
  
<%- include("partials/footer") %>
  