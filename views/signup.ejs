<%- include("partials/header") %>
  

<main class="container py-4">

    <h1>Inscription</h1>
    
    <% if (locals.error) { %>
        <!-- Toast en cas d'erreur -->
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %> 
  
    <form action="#" method="POST">
      <label class="form-label h4" for="firstname">Prénom</label>
      <input class="form-control mb-4" type="text" id="firstname" name="firstname" placeholder="Prénom" required>
  
      <label class="form-label h4" for="lastname">Nom</label>
      <input class="form-control mb-4" type="text" id="lastname" name="lastname" placeholder="Nom" required>
  
      <label class="form-label h4" for="email">Email</label>
      <input class="form-control mb-4" type="email" id="email" name="email" placeholder="email@domain.com" required>
  
      <label class="form-label h4" for="password">Mot de passe</label>
      <input class="form-control mb-4" type="password" id="password" name="password" placeholder="*********">
  
      <label class="form-label h4" for="confirmation">Confirmation du mot de passe</label>
      <input class="form-control mb-4" type="password" id="confirmation" name="confirmation" placeholder="*********">
      
      <input class="btn btn-primary d-block my-4 mx-auto" type="submit" value="S'inscrire">
    </form>
  
  </main>
  
<%- include("partials/footer") %>
  
  